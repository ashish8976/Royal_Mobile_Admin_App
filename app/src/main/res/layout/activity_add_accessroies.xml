<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3BBBB"
    tools:context=".product.AddAccessroiesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accessoriesImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_below="@+id/accessoriesImages"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/AccessId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:hint="Accessories Id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAccessId"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/AccessSpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:hint="Accessories Specification">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAccessSpecification"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/AccessPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:hint="Accessories price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAccessPrice"
                android:textColor="@color/black"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAccessoriesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/productbackground"
        android:layout_margin="20dp"
        android:text="Add Accessories"
        android:textSize="18sp"/>



</RelativeLayout>